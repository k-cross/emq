<html>

mixin product(name, price)
  li.product 
    .product__content
      h2 #{name}
      p.price $#{price}
      p This is the Product Description for a particular item, 
      button(value="#{price}") Add This Product
      .icon__check
      

.introduction
  .wrapper
    h1 EMQ Products
    p Please choose from any of our spectacular products

ul.products
  +product('Product 1', 100)
  +product('Product 2', 400)
  +product('Product 3', 500)
  +product('Product 4', 300)
  +product('Product 5', 1000)
  +product('Product 6', 1500)
  +product('Product 7', 900)
  +product('Product 8', 800)
</html>